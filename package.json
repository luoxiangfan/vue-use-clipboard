{
  "name": "@lxf2513/vue-use-clipboard",
  "version": "1.0.2",
  "description": "Reactive Clipboard API for Vue3.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./component": {
      "import": {
        "types": "./dist/component.d.mts",
        "default": "./dist/component.mjs"
      },
      "require": {
        "types": "./dist/component.d.cts",
        "default": "./dist/component.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --strict --noEmit",
    "format": "prettier --write src/",
    "build": "unbuild",
    "release": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:luoxiangfan/vue-use-clipboard.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "hooks",
    "clipboard",
    "browser",
    "navigator",
    "clipboard api",
    "composition api",
    "use clipboard",
    "vue use clipboard"
  ],
  "author": "lxf <infiniment@163.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luoxiangfan/vue-use-clipboard/issues"
  },
  "homepage": "https://github.com/luoxiangfan/vue-use-clipboard#readme",
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vue": ">3.0.0"
  },
  "dependencies": {
    "vue-use-permission": "^1.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
